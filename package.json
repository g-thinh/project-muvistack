{
  "dependencies": {
    "concurrently": "^5.3.0"
  },
  "scripts": {
    "client": "cd client && yarn start",
    "server": "cd server && yarn start",
    "dev": "concurrently --kill-others-on-fail \"yarn client\" \"yarn server\"",
    "client:build": "cd client && yarn build",
    "client:install": "cd client && yarn install",
    "server:install": "cd server && yarn install",
    "start-client": "cd client && react-scripts start",
    "build": "(cd client && yarn install && yarn build) && (cd server && yarn install)",
    "test": "cd client && react-scripts test",
    "eject": "cd client &&  react-scripts eject",
    "start": "cd server && node index.js"
  }
}
